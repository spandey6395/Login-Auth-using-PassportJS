<div class="outer-layer mx-auto shadow-lg">
  <h1 class="text-center display-4 mb-5">Reset Password</h1>
  <form action="/users/reset" method="POST">
    <input
      type="password"
      name="password"
      placeholder="Enter new password"
      required
    />
    <input
      type="password"
      name="confirm_password"
      placeholder="Confirm password"
      required
    />
    <input type="submit" value="Reset" class="btn btn-danger"  />
</div>
</form>
